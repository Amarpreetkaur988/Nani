<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.naniActivity.NotifiedActivity">

    <ImageView
        android:id="@+id/logo_login"
        android:layout_width="@dimen/dp_250"
        android:layout_height="@dimen/dp_250"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:src="@drawable/logo_splash" />

    <TextView
        android:layout_above="@id/okayButton"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_below="@id/logo_login"
        android:layout_marginStart="@dimen/dp_40"
        android:layout_marginEnd="@dimen/dp_40"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:fontFamily="@font/open_sans"
        android:textStyle="bold"
        android:textSize="@dimen/sp_18"
        android:layout_centerInParent="true"
        android:text="“Your Nani Application Has Been Submitted ! You will be notified once your application to become a Nani is successful”"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/okayButton"
        android:layout_marginBottom="@dimen/dp_40"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:text="Okay"
        android:textColor="@color/white"
        android:fontFamily="@font/open_sans"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="@dimen/dp_40"
        android:background="@color/blue"
        android:layout_height="wrap_content"/>
</RelativeLayout>