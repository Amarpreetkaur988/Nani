<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.StartActivity">

    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/layout"
        android:id="@+id/get_started_pager">

    </androidx.viewpager.widget.ViewPager>

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dots"
            android:gravity="center"
            android:orientation="horizontal">

        </LinearLayout>

        <TextView
            android:id="@+id/whoru_get_started"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dots"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/open_sans"
            android:text="@string/who_are_you"
            android:textColor="#000"
            android:textSize="@dimen/sp_16" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/whoru_get_started"
            android:orientation="horizontal">
            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:text="@string/nani"
                android:layout_weight="1"
                android:id="@+id/nani_button_get_started"
                android:textAllCaps="false"
                android:layout_marginRight="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_20"
                android:background="@drawable/blue_stock_button"
                android:textColor="@color/blue"
                android:fontFamily="@font/open_sans" />
            <Button
                android:id="@+id/buyer_button_get_started"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_below="@+id/whoru_get_started"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_20"
                android:background="@drawable/orange_stroke_button"
                android:fontFamily="@font/open_sans"
                android:text="@string/buyer"
                android:textAllCaps="false"
                android:textColor="#fd6038" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>